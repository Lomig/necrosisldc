<Ui xmlns="http://www.blizzard.com/wow/ui" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<Frame name="NecrosisShardMenu" hidden="true" parent="NecrosisGeneralFrame" movable="false" frameStrata="DIALOG" enableMouse="true">
		<Size>
			<AbsDimension x="350" y="452" />
		</Size>
		<Anchors>
			<Anchor point="BOTTOMLEFT" relativeTo="NecrosisGeneralFrame" />
		</Anchors>
		<HitRectInsets>
			<AbsInset left="0" right="35" top="0" bottom="75" />
		</HitRectInsets>
		<Layers>
			<Layer>
				<FontString name="NecrosisShardsInventory_Section" inherits="GameFontNormalSmall">
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="NecrosisShardMenu">
							<Offset>
								<AbsDimension x="30" y="-20" />
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1" g="0.5" b="1" />
				</FontString>
				<FontString name="NecrosisSoulshardSort_Option" inherits="GameFontNormalSmall">
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="NecrosisShardMenu">
							<Offset>
								<AbsDimension x="60" y="-40" />
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1" g="1" b="1" />
				</FontString>
				<FontString name="NecrosisSoulshardDestroy_Option" inherits="GameFontNormalSmall">
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="NecrosisShardMenu">
							<Offset>
								<AbsDimension x="60" y="-60" />
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1" g="1" b="1" />
				</FontString>
				<FontString name="NecrosisShardsCount_Section" inherits="GameFontNormalSmall">
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="NecrosisShardMenu">
							<Offset>
								<AbsDimension x="30" y="-145" />
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1" g="0.5" b="1" />
				</FontString>
				<FontString name="NecrosisShowCount_Option" inherits="GameFontNormalSmall">
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="NecrosisShardMenu">
							<Offset>
								<AbsDimension x="60" y="-165" />
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1" g="1" b="1" />
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Slider name="NecrosisBag_Slider" inherits="OptionsSliderTemplate" virtual="true" minValue="0" maxValue="4" valueStep="1">
				<Size>
					<AbsDimension x="150" y="16" />
				</Size>
				<Anchors>
					<Anchor point="CENTER" relativeTo="NecrosisShardMenu">
						<Offset>
							<AbsDimension x="0" y="120" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnEnter>
						GameTooltip:SetOwner(this, "ANCHOR_RIGHT")
						GameTooltip:SetText(5-this:GetValue())
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide()
					</OnLeave>
					<OnMouseUp>
						GameTooltip:SetText(5-this:GetValue())
						NecrosisConfig.SoulshardContainer = 4-this:GetValue()
						Necrosis:SoulshardSwitch("MOVE")
					</OnMouseUp>
					<OnValueChanged>
						GameTooltip:SetText(5-this:GetValue())
					</OnValueChanged>
				</Scripts>
			</Slider>
			<Slider name="NecrosisCountType_Slider" inherits="OptionsSliderTemplate" virtual="true" minValue="1" maxValue="5" valueStep="1">
				<Size>
					<AbsDimension x="150" y="16" />
				</Size>
				<Anchors>
					<Anchor point="CENTER" relativeTo="NecrosisShardMenu">
						<Offset>
							<AbsDimension x="0" y="15" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnEnter>
						GameTooltip:SetOwner(this, "ANCHOR_RIGHT")
						GameTooltip:SetText(NECROSIS_CONFIGURATION.Count[this:GetValue()])
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide()
					</OnLeave>
					<OnMouseUp>
						NecrosisConfig.CountType = this:GetValue()
						Necrosis:UpdateHealth()
						Necrosis:UpdateMana()
						Necrosis:BagExplore()
					</OnMouseUp>
					<OnValueChanged>
						GameTooltip:SetText(NECROSIS_CONFIGURATION.Count[this:GetValue()])
					</OnValueChanged>
				</Scripts>
			</Slider>
			<Slider name="NecrosisCircle_Slider" inherits="OptionsSliderTemplate" virtual="true" minValue="1" maxValue="4" valueStep="1">
				<Size>
					<AbsDimension x="150" y="16" />
				</Size>
				<Anchors>
					<Anchor point="CENTER" relativeTo="NecrosisShardMenu">
						<Offset>
							<AbsDimension x="0" y="-30" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnEnter>
						GameTooltip:SetOwner(this, "ANCHOR_RIGHT")
						if this:GetValue() == 1 then
							GameTooltip:SetText(NECROSIS_CONFIGURATION.Count[1])
						else
							GameTooltip:SetText(NECROSIS_CONFIGURATION.Count[this:GetValue() + 1])
						end
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide()
					</OnLeave>
					<OnMouseUp>
						NecrosisConfig.Circle = this:GetValue()
						Necrosis:UpdateHealth()
						Necrosis:UpdateMana()
						Necrosis:BagExplore()
					</OnMouseUp>
					<OnValueChanged>
						if this:GetValue() == 1 then
							GameTooltip:SetText(NECROSIS_CONFIGURATION.Count[1])
						else
							GameTooltip:SetText(NECROSIS_CONFIGURATION.Count[this:GetValue() + 1])
						end
					</OnValueChanged>
				</Scripts>
			</Slider>
			<Slider name="NecrosisColor_Slider" inherits="OptionsSliderTemplate" virtual="true" minValue="1" maxValue="7" valueStep="1">
				<Size>
					<AbsDimension x="150" y="16" />
				</Size>
				<Anchors>
					<Anchor point="CENTER" relativeTo="NecrosisShardMenu">
						<Offset>
							<AbsDimension x="0" y="-75" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnEnter>
						GameTooltip:SetOwner(this, "ANCHOR_RIGHT")
						GameTooltip:SetText(Necrosis.Config.Sphere.Colour[this:GetValue()])
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide()
					</OnLeave>
					<OnMouseUp>
						Necrosis:BagExplore()
					</OnMouseUp>
					<OnValueChanged>
						GameTooltip:SetText(this:GetValue())
						GameTooltip:SetText(Necrosis.Config.Sphere.Colour[this:GetValue()])
						local couleur = {"Rose", "Bleu", "Orange", Turquoise", "Violet", "666", "X"}
						NecrosisConfig.NecrosisColor = couleur[this:GetValue()]
						NecrosisButton:SetNormalTexture("Interface\\AddOns\\Necrosis\\UI\\"..couleur[this:GetValue()].."\\Shard16")
						couleur = nil
					</OnValueChanged>
				</Scripts>
			</Slider>
			<CheckButton name="NecrosisSoulshardSort_Button" inherits="UICheckButtonTemplate" enableMouse="true">
				<Size>
					<AbsDimension x="24" y="24" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="NecrosisShardMenu">
						<Offset>
							<AbsDimension x="30" y="-35" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						if (this:GetChecked()) then
							NecrosisConfig.SoulshardSort = true
						else
							NecrosisConfig.SoulshardSort = false
						end
					</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="NecrosisSoulshardDestroy_Button" inherits="UICheckButtonTemplate" enableMouse="true">
				<Size>
					<AbsDimension x="24" y="24" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="NecrosisShardMenu">
						<Offset>
							<AbsDimension x="30" y="-55" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						if (this:GetChecked()) then
							NecrosisConfig.SoulshardDestroy = true
						else
							NecrosisConfig.SoulshardDestroy = false
						end
					</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="NecrosisShowCount_Button" inherits="UICheckButtonTemplate" enableMouse="true">
				<Size>
					<AbsDimension x="24" y="24" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="NecrosisShardMenu">
						<Offset>
							<AbsDimension x="30" y="-160" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						if (this:GetChecked()) then
							NecrosisConfig.ShowCount = true
						else
							NecrosisConfig.ShowCount = false
						end
						Necrosis:BagExplore()
					</OnClick>
				</Scripts>
			</CheckButton>
		</Frames>
	</Frame>
</Ui>
