	<Button name="NecrosisButton" inherits="NecrosisGeneralTemplate, SecureActionButtonTemplate" toplevel="true">
		<Size> <AbsDimension x="58" y="58" /> </Size>
		<Anchors>
			<Anchor point="CENTER" relativeTo="UIParent" relativePoint="CENTER">
				<Offset> <AbsDimension x="0" y="-100" /> </Offset>
			</Anchor>
		</Anchors>
		<Layers>
			<Layer>
				<FontString name="NecrosisShardCount" inherits="GameFontNormal" text="00">
					<Anchors>
						<Anchor point="CENTER" relativeTo="NecrosisButton">
							<Offset> <AbsDimension x="0" y="0" /> </Offset>
						</Anchor>
					</Anchors>
					<Color r="1" g="1" b="1" />
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad> Necrosis_OnLoad() </OnLoad>
			<OnEvent> Necrosis_OnEvent(event) </OnEvent>
			<OnUpdate> Necrosis_OnUpdate() </OnUpdate>
			<OnEnter> Necrosis_BuildTooltip(this, "Main", "ANCHOR_LEFT") </OnEnter>
			<OnDragStart> Necrosis_OnDragStart(this) </OnDragStart>
			<PreClick>
				if this:CanChangeProtectedState() and arg1 == "RightButton" then
					if NecrosisGeneralFrame:IsVisible() then
						NecrosisGeneralFrame:Hide()
					else
						NecrosisGeneralFrame:Show()
						NecrosisGeneralTab_OnClick(1)
					end
				end
			</PreClick>	
		</Scripts>
		<NormalTexture file="Interface\AddOns\Necrosis\UI\Shard" />
	</Button>
