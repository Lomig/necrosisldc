	</Button>
	<Button name="NecrosisButtonTemplate" inherits="NecrosisGeneralTemplate, SecureActionButtonTemplate" virtual="true" >
		<Size>
			<AbsDimension x="34" y="34" />
		</Size>
		<Anchors>
			<Anchor point="CENTER" relativeTo="UIParent" relativePoint="CENTER">
				<Offset> <AbsDimension x="-53" y="-100" /> </Offset>
			</Anchor>
		</Anchors>
		<Scripts>
			<OnLoad>
				this:RegisterForDrag("LeftButton")
				this:RegisterForClicks("AnyUp")
